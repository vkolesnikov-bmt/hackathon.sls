{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": ".build",
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2017"],
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@models/*": ["./models/*"],
      "@services/*": ["./services/*"],
      "@helper/*": ["./helper/*"],
      "@interfaces/*": ["./interfaces/*"]
    }
  },
  "exclude": ["node_modules", "coverage", ".build", ".esbuild", ".git"]
}
